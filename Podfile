project 'iTopic.xcodeproj'

# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'iTopic' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for iTopic
  pod 'Bond'
  pod 'Kingfisher'
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'
  
  pod 'Fabric'
  pod 'Crashlytics'

  target 'iTopicTests' do
    inherit! :complete
    # Pods for testing
  end

  target 'iTopicUITests' do
    inherit! :complete
    # Pods for testing
  end

end
